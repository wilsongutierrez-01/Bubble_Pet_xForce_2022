<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetProfile">

    <EditText
        android:id="@+id/txtNamePet0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nombre de Mascota"
        android:textAlignment="center"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/lblName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"/>


    <EditText
        android:id="@+id/txtAge0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Edad"
        android:textAlignment="center"
        android:layout_below="@+id/txtNamePet0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"/>
    <TextView
        android:id="@+id/lblAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edad:"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/lblName"
        android:textSize="20dp"/>


    <EditText
        android:id="@+id/txtColor0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Color"
        android:textAlignment="center"
        android:layout_below="@+id/txtAge0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"/>
    <TextView
        android:id="@+id/lblColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color:"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/lblAge"
        android:textSize="20dp"/>


    <EditText
        android:id="@+id/txtRaza0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Raza"
        android:textAlignment="center"
        android:layout_below="@+id/txtColor0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"/>
    <TextView
        android:id="@+id/lblRaza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raza"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/lblColor"
        android:textSize="20dp"/>


    <EditText
        android:id="@+id/txtSalud0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Estado de Salud"
        android:textAlignment="center"
        android:layout_below="@+id/txtRaza0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"/>
    <TextView
        android:id="@+id/lblSalud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salud"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/lblRaza"
        android:textSize="20dp"/>


    <EditText
        android:id="@+id/txtCel0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Numero del dueño"
        android:textAlignment="center"
        android:layout_below="@+id/txtSalud0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"/>
    <TextView
        android:id="@+id/lblCel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cel Dueño:"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/lblSalud"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:layout_below="@+id/txtCel0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnBack0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:layout_below="@id/lblCel"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"/>
</RelativeLayout>